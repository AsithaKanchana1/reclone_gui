{
  "app-id": "io.github.asithakanchana1.reclone_gui",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.node20",
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "reclone-gui",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home",
    "--filesystem=/mnt",
    "--filesystem=/media",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.kde.StatusNotifierWatcher"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/node20/bin:/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_HOME": "/run/build/reclone-gui/cargo",
      "npm_config_nodedir": "/usr/lib/sdk/node20"
    }
  },
  "modules": [
    {
      "name": "rclone",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 rclone /app/bin/rclone"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/rclone/rclone/releases/download/v1.68.2/rclone-v1.68.2-linux-amd64.zip",
          "sha256": "405e3b0a72bb3f069adaaa4fc11c8c86b145f1dc78baa9289ab9cc18ea3e94c8",
          "strip-components": 1
        }
      ]
    },
    {
      "name": "reclone-gui",
      "buildsystem": "simple",
      "build-commands": [
        "npm ci --offline",
        "npm run build",
        "cd src-tauri && cargo build --release",
        "install -Dm755 src-tauri/target/release/reclone-gui /app/bin/reclone-gui",
        "install -Dm644 flatpak/io.github.asithakanchana1.reclone_gui.desktop /app/share/applications/io.github.asithakanchana1.reclone_gui.desktop",
        "install -Dm644 src-tauri/icons/128x128.png /app/share/icons/hicolor/128x128/apps/io.github.asithakanchana1.reclone_gui.png",
        "install -Dm644 src-tauri/icons/32x32.png /app/share/icons/hicolor/32x32/apps/io.github.asithakanchana1.reclone_gui.png",
        "install -Dm644 flatpak/io.github.asithakanchana1.reclone_gui.metainfo.xml /app/share/metainfo/io.github.asithakanchana1.reclone_gui.metainfo.xml"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/AsithaKanchana1/reclone_gui.git",
          "tag": "v0.2.0"
        },
        "generated-sources.json"
      ]
    }
  ]
}
